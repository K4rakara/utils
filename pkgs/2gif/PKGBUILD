pkgname=2gif
pkgver=0.0.1
pkgrel=2
pkgdesc="Convert videos to .gif with ease."
arch=('i686' 'x86_64' 'x64')
url="https://github.com/K4rakara/dotfiles"
license=('MIT')
depends=('jsgrep' 'round-time-up' 'mediainfo' 'ffmpeg' 'ruby')
makedepends=('make')
provides=('2gif')
source=()
md5sums=()

build() {
	echo "Nothing to do" > /dev/null;
}

package() {
	install -Dm755 \
		$srcdir/../../../cli/2gif/2gif.rb \
		$pkgdir/usr/bin/2gif;
}

